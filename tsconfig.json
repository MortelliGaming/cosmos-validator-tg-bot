{
    "compilerOptions": {
      "target": "ES2022",  // Ensures async/await, Set iteration, and latest Node.js features
      "module": "NodeNext", // Uses modern ES module resolution for Node.js
      "moduleResolution": "NodeNext",
      "lib": ["ES2022"], // Uses latest Node.js built-in types
      "strict": true, 
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "outDir": "./dist"
    },
    "include": ["./src/**/*", "index.ts"],
    "exclude": ["node_modules", "dist"]
  }
  